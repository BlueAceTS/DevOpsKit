{
    "manifestVersion": 1,
    "id": "ADOSecurityScanner",
    "publisher": "azsdktm",
    "public": true,
    "version": "1.0.0",
    "name": "ADO Security Scanner",
    "description": "ADO Security Scanner checks secure configuration settings for various ADO artifacts such as organization, projects, builds, releases, agent pools, etc.",
    "categories": ["Azure Boards","Azure Pipelines"],
    "icons": {
        "default": "images/Icon.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Security",
        "ADO Security",
        "Azure DevOps",
        "ADO Scanner",
        "ADO"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "getstarted": {
          "uri": "https://aka.ms/adoscanner"
        },
        "repository": {
          "uri": "https://github.com/azsk"
        },
        "license": {
          "uri": "https://github.com/azsk/DevOpsKit-docs/blob/master/LICENSE"
        },
        "support": {
          "uri": "https://aka.ms/adoscanner#Support"
        }
      },
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ADOSecurityScanner_Task"
            }
        },
        {
            "id": "OrgLevelSecuritySummary",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "ADO Security Org Security View",
                "description": "Displays security configuration status for organization and project level controls",
                "catalogIconUrl": "images/Icon.png",
                "previewImageUrl": "images/Icon.png",                            
                "uri": "OrgLevelSecuritySummary.html",   
                "Sizes": [
                    {
                           "rowSpan": 6,
                           "columnSpan": 6
                       }
                   ],          
                "supportedSizes": [
                     {
                            "rowSpan": 6,
                            "columnSpan": 6
                        }
                    ],
                "supportedScopes": ["project_team"]
            }
        },
        {
            "id": "ProjectComponentSecurityScanSummary",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "ADO Security Project Components Security View",
                "description": "Displays security configuration status for project components (Build/Release/Connections/AgentPool)",
                "catalogIconUrl": "images/Icon.png",
                "previewImageUrl": "images/Icon.png",                            
                "uri": "ProjectComponentSecurityScanSummary.html",
                "Sizes": [
                    {
                           "rowSpan": 10,
                           "columnSpan": 10
                       }
                   ],          
                "supportedSizes": [
                     {
                            "rowSpan":10,
                            "columnSpan": 10
                        }
                    ],
                "supportedScopes": ["project_team"]
            }
        }
    ],
    "files": [
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "ADOSecurityScanner_Task"
        },
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "ProjectComponentSecurityScanSummary.html",
            "addressable": true
        },
        {
            "path": "OrgLevelSecuritySummary.html",
            "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        },
        {
            "path": "Styles",
            "addressable": true
        }
    ],
    "scopes": [
        "vso.project"
    ]
}